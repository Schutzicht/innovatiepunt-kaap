---
import Layout from '../../layouts/Layout.astro';

import { projects } from '../../data/projects';
import ProjectCard from '../../components/cards/ProjectCard.astro';

const themes = [
    { label: 'Alles', value: 'all' },
    { label: 'Water', value: 'water', color: 'text-kaap-water border-kaap-water' },
    { label: 'Voedsel', value: 'voedsel', color: 'text-kaap-food border-kaap-food' },
    { label: 'Energie', value: 'energie', color: 'text-kaap-energy border-kaap-energy' },
];
---

<Layout title="Projecten | Innovatiepunt KAAP">
  <section class="py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16 reveal">
        <h1 class="text-4xl md:text-6xl font-bold font-heading text-gray-900 mb-4">Onze Projecten</h1>
        <p class="text-xl text-gray-500 max-w-2xl mx-auto">Discover how we work on transitions in water, food, and energy.</p>
      </div>
    </div>

  <section class="py-16 bg-gray-50 min-h-screen">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        
      <!-- Filters (client-side simple implementation or styling for now) -->
      <div class="flex flex-wrap gap-4 mb-12">
        {themes.map(t => (
            <button class={`px-6 py-2 rounded-full border-2 font-medium transition-all 
                ${t.value === 'all' 
                    ? 'bg-kaap-gray border-gray-900 text-white' 
                    : 'bg-white border-gray-200 text-gray-600 hover:border-gray-400'
                }
            `}>
                {t.label}
            </button>
        ))}
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {projects.map((project, index) => (
            <ProjectCard project={project} index={index} />
        ))}
      </div>
    </div>
  </section>
</Layout>
