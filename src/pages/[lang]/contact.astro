---
import Layout from '../../layouts/Layout.astro';
import { getStaticPathsHelper } from '../../i18n/utils';

export function getStaticPaths() {
  return getStaticPathsHelper();
}

const { lang } = Astro.params;

const content = {
  nl: {
    hero: {
      title: "Neem contact op",
      desc: "Heb je een vraag, een idee of wil je langskomen? We horen graag van je."
    },
    info: {
      title: "Gegevens",
      address: "Edisonweg 10\n4382 NW Vlissingen",
      hours: {
        title: "Openingstijden",
        week: "Maandag - Vrijdag",
        weekend: "Zaterdag - Zondag",
        closed: "Gesloten"
      }
    },
    form: {
        placeholder: "HubSpot Formulier verschijnt hier."
    }
  },
  en: {
    hero: {
      title: "Get in touch",
      desc: "Do you have a question, an idea, or would you like to visit? We would love to hear from you."
    },
    info: {
      title: "Details",
      address: "Edisonweg 10\n4382 NW Vlissingen",
      hours: {
        title: "Opening hours",
        week: "Monday - Friday",
        weekend: "Saturday - Sunday",
        closed: "Closed"
      }
    },
    form: {
        placeholder: "HubSpot Form will appear here."
    }
  }
};

const c = content[lang] || content.nl;
---

<Layout title={`${lang === 'nl' ? 'Contact' : 'Contact'} | Innovatiepunt KAAP`} lang={lang}>
  <div class="bg-gray-50 min-h-screen">
    <!-- Header -->
    <section class="bg-kaap-gray py-20 relative overflow-hidden">
        <div class="absolute inset-0 bg-kaap-gradient opacity-10"></div>
        <div class="max-w-7xl mx-auto px-4 relative z-10 text-center reveal">
            <h1 class="text-4xl md:text-6xl font-bold font-heading text-white mb-6">{c.hero.title}</h1>
            <p class="text-xl text-gray-300 max-w-2xl mx-auto">
                {c.hero.desc}
            </p>
        </div>
    </section>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 -mt-12 relative z-20 pb-24">
        <div class="bg-white rounded-3xl shadow-xl overflow-hidden flex flex-col md:flex-row reveal delay-200">
            
            <!-- Contact Info -->
            <div class="w-full md:w-5/12 bg-kaap-gray p-10 text-white relative overflow-hidden">
                <div class="absolute inset-0 bg-kaap-gradient opacity-10"></div>
                
                <div class="relative z-10 space-y-8">
                    <div>
                        <h3 class="text-2xl font-bold font-heading mb-6">{c.info.title}</h3>
                        <div class="space-y-4 text-gray-300">
                            <p class="flex items-start">
                                <svg class="w-6 h-6 mr-4 text-kaap-pink shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                                <span>{c.info.address}</span>
                            </p>
                            <p class="flex items-center">
                                <svg class="w-6 h-6 mr-4 text-kaap-pink shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
                                <a href="mailto:info@innovatiepunt-kaap.nl" class="hover:text-white transition-colors">info@innovatiepunt-kaap.nl</a>
                            </p>
                             <p class="flex items-center">
                                <svg class="w-6 h-6 mr-4 text-kaap-pink shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg>
                                <a href="tel:0652661475" class="hover:text-white transition-colors">06-52661475</a>
                            </p>
                        </div>
                    </div>

                    <div>
                         <h3 class="text-2xl font-bold font-heading mb-6">{c.info.hours.title}</h3>
                         <ul class="space-y-2 text-gray-300">
                             <li class="flex justify-between"><span>{c.info.hours.week}</span> <span>08:30 - 17:30</span></li>
                             <li class="flex justify-between"><span>{c.info.hours.weekend}</span> <span>{c.info.hours.closed}</span></li>
                         </ul>
                    </div>
                </div>
            </div>

            <!-- Form -->
            <div class="w-full md:w-7/12 p-10">
                <!-- HubSpot Form Placeholder -->
                <div class="bg-gray-100 p-8 rounded-lg text-center">
                    <p class="text-gray-500 mb-4">{c.form.placeholder}</p>
                    <script charset="utf-8" type="text/javascript" src="//js-eu1.hsforms.net/forms/embed/v2.js"></script>
                    <script>
                    // @ts-ignore
                    hbspt.forms.create({
                        region: "eu1",
                        portalId: "145415386",
                        formId: "REPLACE_WITH_FORM_ID"
                    });
                    </script>
                </div>
            </div>
        </div>
    </div>
  </div>
</Layout>
