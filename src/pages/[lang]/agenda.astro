---
import Layout from '../../layouts/Layout.astro';
import { getEvents } from '../../lib/api';

import { getStaticPathsHelper } from '../../i18n/utils';

export function getStaticPaths() {
  return getStaticPathsHelper();
}

const { lang } = Astro.params;
const events = await getEvents();

const content = {
  nl: {
    hero: {
      label: "Community Hub",
      title: "Events & Ontmoetingen",
      desc: "KAAP bruist door de mensen die er werken en komen. Bekijk wat er te doen is of organiseer zelf iets.",
      btn_submit: "Meld je event aan",
      btn_view: "Bekijk agenda"
    },
    labels: {
        register: "Aanmelden"
    }
  },
  en: {
    hero: {
      label: "Community Hub",
      title: "Events & Gatherings",
      desc: "KAAP thrives because of the people who work and visit here. See what's on or organize something yourself.",
      btn_submit: "Register your event",
      btn_view: "View agenda"
    },
    labels: {
        register: "Register"
    }
  }
};

const c = content[lang] || content.nl;
---

<Layout title={`${lang === 'nl' ? 'Events' : 'Events'} | Innovatiepunt KAAP`} lang={lang}>
  <section class="py-24 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Hero Section with Community Vibe -->
      <div class="text-center mb-16 reveal relative">
        <span class="text-kaap-purple font-bold tracking-wider uppercase text-sm mb-2 block animate-pulse">{c.hero.label}</span>
        <h1 class="text-4xl md:text-6xl font-bold font-heading text-gray-900 mb-6">{c.hero.title}</h1>
        <p class="text-xl text-gray-500 max-w-2xl mx-auto mb-10">
            {c.hero.desc}
        </p>
        
        <div class="flex flex-col sm:flex-row justify-center gap-4">
            <a href={`/${lang}/contact?subject=Event%20Organiseren`} class="px-8 py-3 rounded-full bg-kaap-gradient text-white font-bold shadow-lg hover:bg-white hover:text-kaap-purple transition-all transform hover:-translate-y-1">
                {c.hero.btn_submit}
            </a>
            <a href="#agenda" class="px-8 py-3 rounded-full bg-white text-gray-700 font-bold border border-gray-200 hover:border-gray-400 transition-all">
                {c.hero.btn_view}
            </a>
        </div>
      </div>

      <!-- Events Grid -->
      <div id="agenda" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {events.map((event, index) => (
          <article class={`bg-white rounded-3xl overflow-hidden shadow-sm hover:shadow-2xl hover:-translate-y-2 transition-all duration-500 reveal delay-${index * 100} group flex flex-col h-full border border-gray-100`}>
            <div class="h-56 relative overflow-hidden group-hover:opacity-90 transition-opacity">
                <!-- Date Badge -->
                <div class="absolute top-4 left-4 bg-white/95 backdrop-blur px-4 py-2 rounded-xl text-center shadow-lg z-10 transform group-hover:scale-110 transition-transform">
                    <span class="block text-xl font-bold text-gray-900">{new Date(event.date).getDate()}</span>
                    <span class="block text-xs uppercase font-bold text-gray-400">{new Date(event.date).toLocaleDateString(lang === 'nl' ? 'nl-NL' : 'en-US', { month: 'short' })}</span>
                </div>
                
                <!-- Category Badge -->
                <span class="absolute top-4 right-4 bg-kaap-purple/90 text-white text-xs font-bold px-3 py-1 rounded-full uppercase tracking-wider z-10 shadow-md">
                    {event.category}
                </span>

                <img src={event.image} alt={event.title} class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-700" />
                <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            </div>
            
            <div class="p-8 flex flex-col flex-grow relative">
                <div class="mb-4">
                    <h3 class="text-2xl font-bold text-gray-900 mb-2 group-hover:text-kaap-pink transition-colors leading-tight">{event.title}</h3>
                </div>

                <div class="space-y-3 mb-6 flex-grow">
                    <div class="flex items-center text-gray-500 text-sm">
                        <svg class="w-5 h-5 mr-3 text-kaap-water" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                        {event.time}
                    </div>
                    <div class="flex items-center text-gray-500 text-sm">
                         <svg class="w-5 h-5 mr-3 text-kaap-water" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                        {event.location}
                    </div>
                    {event.description && (
                        <p class="text-gray-500 text-sm leading-relaxed mt-4 line-clamp-3">
                            {event.description}
                        </p>
                    )}
                </div>

                <a href={event.registrationLink || '#'} class="w-full py-3 border-2 border-gray-100 rounded-xl text-gray-700 font-bold hover:border-kaap-purple hover:bg-kaap-purple hover:text-white transition-all text-center inline-block group-hover:shadow-lg">
                    {c.labels.register}
                </a>
            </div>
          </article>
        ))}
      </div>
      
      <!-- Future Integration Note -->
      <div class="mt-8 text-center text-gray-400 text-sm">
          &copy; {new Date().getFullYear()} Innovatiepunt KAAP
      </div>

    </div>
  </section>
</Layout>
