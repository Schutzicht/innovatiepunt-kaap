---
import Layout from '../../layouts/Layout.astro';
import { Image } from 'astro:assets';
import { getStaticPathsHelper } from '../../i18n/utils';

export function getStaticPaths() {
  return getStaticPathsHelper();
}

const { lang } = Astro.params;

const content = {
  nl: {
    hero: {
      label: "Voor Overheid & Publiek",
      title_start: "Beleid wordt hier",
      title_end: "werkelijkheid",
      desc: "KAAP is de fysieke manifestatie van de regionale transities in water, voedsel en energie. Zie innovatie in actie.",
      btn_visit: "Plan een werkbezoek",
      btn_projects: "Bekijk Projecten"
    },
    value: [
      { title: "Regionale Impact", desc: "KAAP draagt direct bij aan de economische en duurzame doelen van Zeeland. Een proeftuin voor de regio." },
      { title: "Samenwerking", desc: "De Triple Helix (overheid, onderwijs, ondernemers) in de praktijk. We verbinden beleidmakers met uitvoerders." },
      { title: "Zichtbaar Resultaat", desc: "Gebruik KAAP om innovaties te demonstreren aan stakeholders, burgers en partners. Een vitrine voor de toekomst." }
    ],
    cta: {
      title: "Samenwerken aan de Delta?",
      desc: "Wij gaan graag in gesprek over hoe we regionale doelen kunnen versterken.",
      btn: "Maak een afspraak"
    }
  },
  en: {
    hero: {
      label: "For Government & Public",
      title_start: "Policy becomes",
      title_end: "reality here",
      desc: "KAAP is the physical manifestation of regional transitions in water, food, and energy. See innovation in action.",
      btn_visit: "Plan a visit",
      btn_projects: "View Projects"
    },
    value: [
      { title: "Regional Impact", desc: "KAAP contributes directly to the economic and sustainable goals of Zeeland. A testbed for the region." },
      { title: "Collaboration", desc: "The Triple Helix (government, education, entrepreneurs) in practice. We connect policymakers with implementers." },
      { title: "Visible Results", desc: "Use KAAP to demonstrate innovations to stakeholders, citizens, and partners. A showcase for the future." }
    ],
    cta: {
      title: "Collaborate on the Delta?",
      desc: "We would love to discuss how we can strengthen regional goals together.",
      btn: "Make an appointment"
    }
  }
};

const c = content[lang] || content.nl;

const governmentHero = "https://images.unsplash.com/photo-1486406146926-c627a92ad1ab?auto=format&fit=crop&q=80&w=2600";
---

<Layout title={`${lang === 'nl' ? 'Overheid & Publiek' : 'Government & Public'} | Innovatiepunt KAAP`} lang={lang}>
  <!-- Hero Section -->
  <section class="relative min-h-[60vh] flex items-center bg-kaap-water overflow-hidden">
    <div class="absolute inset-0 z-0">
        <Image src={governmentHero} alt="Stad van de toekomst" width={2600} height={1600} class="w-full h-full object-cover opacity-30 mix-blend-multiply" />
        <div class="absolute inset-0 bg-gradient-to-r from-kaap-water via-kaap-water/80 to-transparent"></div>
    </div>

    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
        <div class="max-w-3xl reveal">
            <span class="text-white/80 font-bold tracking-wider uppercase text-sm mb-4 block">{c.hero.label}</span>
            <h1 class="text-4xl md:text-6xl font-bold font-heading text-white mb-6 leading-tight">
                {c.hero.title_start} <br/><span class="text-transparent bg-clip-text bg-gradient-to-r from-white to-gray-300">{c.hero.title_end}.</span>
            </h1>
            <p class="text-xl text-gray-200 mb-8 leading-relaxed">
                {c.hero.desc}
            </p>
            <div class="flex flex-wrap gap-4">
                 <a href={`/${lang}/contact`} class="px-8 py-4 bg-white text-kaap-water font-bold rounded-full hover:shadow-lg hover:bg-gray-100 transition-all">
                    {c.hero.btn_visit}
                </a>
                 <a href={`/${lang}/projecten`} class="px-8 py-4 border-2 border-white/30 text-white font-bold rounded-full hover:bg-white/10 transition-all">
                    {c.hero.btn_projects}
                </a>
            </div>
        </div>
    </div>
  </section>

  <!-- Value Proposition Grid -->
  <section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-12">
            <div class="reveal">
                <div class="w-16 h-16 bg-kaap-water/10 rounded-2xl flex items-center justify-center mb-6 text-kaap-water">
                     <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                </div>
                <h3 class="text-2xl font-bold text-gray-900 mb-4">{c.value[0].title}</h3>
                <p class="text-gray-600 leading-relaxed">
                    {c.value[0].desc}
                </p>
            </div>
            
            <div class="reveal delay-100">
                <div class="w-16 h-16 bg-kaap-purple/10 rounded-2xl flex items-center justify-center mb-6 text-kaap-purple">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path></svg>
                </div>
                <h3 class="text-2xl font-bold text-gray-900 mb-4">{c.value[1].title}</h3>
                <p class="text-gray-600 leading-relaxed">
                    {c.value[1].desc}
                </p>
            </div>

            <div class="reveal delay-200">
                <div class="w-16 h-16 bg-kaap-food/10 rounded-2xl flex items-center justify-center mb-6 text-kaap-food">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                </div>
                <h3 class="text-2xl font-bold text-gray-900 mb-4">{c.value[2].title}</h3>
                <p class="text-gray-600 leading-relaxed">
                    {c.value[2].desc}
                </p>
            </div>
        </div>
    </div>
  </section>

   <!-- CTA Section -->
  <section class="py-20 bg-gray-50">
      <div class="max-w-4xl mx-auto px-4 text-center reveal">
          <h2 class="text-3xl md:text-5xl font-bold font-heading text-gray-900 mb-6">{c.cta.title}</h2>
          <p class="text-lg text-gray-600 mb-10 leading-relaxed">
             {c.cta.desc}
          </p>
          <a href={`/${lang}/contact`} class="inline-block px-10 py-4 bg-kaap-water text-white font-bold rounded-full shadow-lg hover:shadow-xl hover:scale-105 transition-all">
              {c.cta.btn}
          </a>
      </div>
  </section>
</Layout>
