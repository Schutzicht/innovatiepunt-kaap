---
import Layout from '../../layouts/Layout.astro';
import { Image } from 'astro:assets';
import { getStaticPathsHelper } from '../../i18n/utils';

export function getStaticPaths() {
  return getStaticPathsHelper();
}

const { lang } = Astro.params;

const content = {
  nl: {
    hero: {
      label: "Voor Onderwijs & Talent",
      title_start: "Leer in het hart",
      title_end: "van de innovatie",
      desc: "KAAP is de plek waar theorie praktijk wordt. Werk aan echte vraagstukken van bedrijven en draag bij aan de toekomst van Zeeland.",
      btn_visit: "Kom Langs",
      btn_internship: "Bekijk Stages"
    },
    value: [
      { title: "Echte Projecten", desc: "Geen fictieve casussen, maar werken aan uitdagingen van echte ondernemers. Jouw inbreng heeft direct impact." },
      { title: "Ontmoet je Toekomst", desc: "Netwerk met potentiële werkgevers tijdens events, hackathons en borrels. KAAP is de springplank voor je carrière." },
      { title: "Onderzoek & Faciliteiten", desc: "Gebruik onze labs en werkplaatsen voor je afstudeeronderzoek of project. Professionele apparatuur binnen handbereik." }
    ],
    cta: {
      title: "Wil je hier afstuderen?",
      desc: "We hebben regelmatig plekken voor stagiairs en afstudeerders.",
      btn: "Neem contact op"
    }
  },
  en: {
    hero: {
      label: "For Education & Talent",
      title_start: "Learn at the heart",
      title_end: "of innovation",
      desc: "KAAP is where theory meets practice. Work on real business challenges and contribute to the future of Zeeland.",
      btn_visit: "Visit Us",
      btn_internship: "View Internships"
    },
    value: [
      { title: "Real Projects", desc: "No fictional cases, but working on challenges from real entrepreneurs. Your input has a direct impact." },
      { title: "Meet Your Future", desc: "Network with potential employers during events, hackathons, and gatherings. KAAP is the springboard for your career." },
      { title: "Research & Facilities", desc: "Use our labs and workshops for your graduation research or project. Professional equipment at your fingertips." }
    ],
    cta: {
      title: "Want to graduate here?",
      desc: "We regularly have spots for interns and graduates.",
      btn: "Contact us"
    }
  }
};

const c = content[lang] || content.nl;

const educationHero = "https://images.unsplash.com/photo-1523240795612-9a054b0db644?auto=format&fit=crop&q=80&w=2600";
---

<Layout title={`${lang === 'nl' ? 'Onderwijs & Studenten' : 'Education & Students'} | Innovatiepunt KAAP`} lang={lang}>
  <!-- Hero Section -->
  <section class="relative min-h-[60vh] flex items-center bg-kaap-purple overflow-hidden">
    <div class="absolute inset-0 z-0">
        <Image src={educationHero} alt="Studenten aan het werk" width={2600} height={1600} class="w-full h-full object-cover opacity-30 mix-blend-multiply" />
        <div class="absolute inset-0 bg-gradient-to-r from-kaap-purple via-kaap-purple/80 to-transparent"></div>
    </div>

    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
        <div class="max-w-3xl reveal">
            <span class="text-white/80 font-bold tracking-wider uppercase text-sm mb-4 block">{c.hero.label}</span>
            <h1 class="text-4xl md:text-6xl font-bold font-heading text-white mb-6 leading-tight">
                {c.hero.title_start} <br/><span class="text-transparent bg-clip-text bg-gradient-to-r from-white to-gray-300">{c.hero.title_end}.</span>
            </h1>
            <p class="text-xl text-gray-200 mb-8 leading-relaxed">
                {c.hero.desc}
            </p>
            <div class="flex flex-wrap gap-4">
                 <a href={`/${lang}/contact`} class="px-8 py-4 bg-white text-kaap-purple font-bold rounded-full hover:shadow-lg hover:bg-gray-100 transition-all">
                    {c.hero.btn_visit}
                </a>
                 <a href={`/${lang}/vacatures`} class="px-8 py-4 border-2 border-white/30 text-white font-bold rounded-full hover:bg-white/10 transition-all">
                    {c.hero.btn_internship}
                </a>
            </div>
        </div>
    </div>
  </section>

  <!-- Value Proposition Grid -->
  <section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-12">
            <div class="reveal">
                <div class="w-16 h-16 bg-kaap-purple/10 rounded-2xl flex items-center justify-center mb-6 text-kaap-purple">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z"></path></svg>
                </div>
                <h3 class="text-2xl font-bold text-gray-900 mb-4">{c.value[0].title}</h3>
                <p class="text-gray-600 leading-relaxed">
                    {c.value[0].desc}
                </p>
            </div>
            
            <div class="reveal delay-100">
                <div class="w-16 h-16 bg-kaap-pink/10 rounded-2xl flex items-center justify-center mb-6 text-kaap-pink">
                     <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path></svg>
                </div>
                <h3 class="text-2xl font-bold text-gray-900 mb-4">{c.value[1].title}</h3>
                <p class="text-gray-600 leading-relaxed">
                    {c.value[1].desc}
                </p>
            </div>

            <div class="reveal delay-200">
                <div class="w-16 h-16 bg-kaap-water/10 rounded-2xl flex items-center justify-center mb-6 text-kaap-water">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.384-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path></svg>
                </div>
                <h3 class="text-2xl font-bold text-gray-900 mb-4">{c.value[2].title}</h3>
                <p class="text-gray-600 leading-relaxed">
                    {c.value[2].desc}
                </p>
            </div>
        </div>
    </div>
  </section>

   <!-- CTA Section -->
  <section class="py-20 bg-gray-50">
      <div class="max-w-4xl mx-auto px-4 text-center reveal">
          <h2 class="text-3xl md:text-5xl font-bold font-heading text-gray-900 mb-6">{c.cta.title}</h2>
          <p class="text-lg text-gray-600 mb-10 leading-relaxed">
             {c.cta.desc}
          </p>
          <a href={`/${lang}/contact?subject=Stage/Afstuderen`} class="inline-block px-10 py-4 bg-kaap-purple text-white font-bold rounded-full shadow-lg hover:shadow-xl hover:scale-105 transition-all">
              {c.cta.btn}
          </a>
      </div>
  </section>
</Layout>
