---
import Layout from '../../layouts/Layout.astro';
import { Image } from 'astro:assets';
import { getStaticPathsHelper } from '../../i18n/utils';

export function getStaticPaths() {
  return getStaticPathsHelper();
}

const { lang } = Astro.params;

const content = {
  nl: {
    hero: {
      label: "Voor Ondernemers",
      title_start: "Versnel je innovatie",
      title_end: "in de praktijk",
      desc: "KAAP biedt de fysieke ruimte, het netwerk en de faciliteiten om jouw ideeÃ«n te testen, te valideren en op te schalen.",
      btn_visit: "Kom Kijken",
      btn_facilities: "Bekijk Faciliteiten"
    },
    value: [
      { title: "Pilot & Testveld", desc: "Test je prototype in een realistische omgeving. Wij bieden binnen- en buitenruimtes speciaal ingericht voor experimenten op het gebied van water, voeding en energie." },
      { title: "Ecosysteem & Netwerk", desc: "Je staat er niet alleen voor. Krijg toegang tot ons netwerk van investeerders, kennisinstellingen (HZ, Scalda) en overheden." },
      { title: "Faciliteiten & Groei", desc: "Van flexibele werkplekken tot loodsen en vergaderruimtes. KAAP groeit met je mee, van startup tot scale-up." }
    ],
    cta: {
      title: "Klaar om te starten?",
      desc: "Kom eens langs voor een kop koffie en ontdek wat KAAP voor jouw onderneming kan betekenen.",
      btn: "Plan een kennismaking"
    }
  },
  en: {
     hero: {
      label: "For Entrepreneurs",
      title_start: "Accelerate your innovation",
      title_end: "in practice",
      desc: "KAAP offers the physical space, network, and facilities to test, validate, and scale your ideas.",
      btn_visit: "Come Visit",
      btn_facilities: "View Facilities"
    },
    value: [
      { title: "Pilot & Test Field", desc: "Test your prototype in a realistic environment. We offer indoor and outdoor spaces specifically designed for experiments in water, food, and energy." },
      { title: "Ecosystem & Network", desc: "You are not alone. Get access to our network of investors, knowledge institutions (HZ, Scalda), and governments." },
      { title: "Facilities & Growth", desc: "From flexible workspaces to warehouses and meeting rooms. KAAP grows with you, from startup to scale-up." }
    ],
    cta: {
      title: "Ready to start?",
      desc: "Come by for a coffee and discover what KAAP can mean for your business.",
      btn: "Schedule a meeting"
    }
  }
};

const c = content[lang] || content.nl;

// You might want to use real images here later
const entrepreneurHero = "https://images.unsplash.com/photo-1556761175-5973dc0f32e7?auto=format&fit=crop&q=80&w=2600";
---

<Layout title="Ondernemers & Startups | Innovatiepunt KAAP" lang={lang}>
  <!-- Hero Section -->
  <section class="relative min-h-[60vh] flex items-center bg-kaap-gray overflow-hidden">
    <div class="absolute inset-0 z-0">
        <Image src={entrepreneurHero} alt="Ondernemers aan het werk" width={2600} height={1600} class="w-full h-full object-cover opacity-30" />
        <div class="absolute inset-0 bg-gradient-to-r from-kaap-gray via-kaap-gray/80 to-transparent"></div>
    </div>

    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
        <div class="max-w-3xl reveal">
            <span class="text-kaap-pink font-bold tracking-wider uppercase text-sm mb-4 block">{c.hero.label}</span>
            <h1 class="text-4xl md:text-6xl font-bold font-heading text-white mb-6 leading-tight">
                {c.hero.title_start} <br/> <span class="text-transparent bg-clip-text bg-gradient-to-r from-kaap-pink to-kaap-purple">{c.hero.title_end}.</span>
            </h1>
            <p class="text-xl text-gray-300 mb-8 leading-relaxed">
                {c.hero.desc}
            </p>
            <div class="flex flex-wrap gap-4">
                <a href={`/${lang}/contact`} class="px-8 py-4 bg-kaap-gradient text-white font-bold rounded-full hover:shadow-lg hover:scale-105 transition-all">
                    {c.hero.btn_visit}
                </a>
                <a href={`/${lang}/faciliteiten`} class="px-8 py-4 bg-white/10 backdrop-blur border border-white/20 text-white font-bold rounded-full hover:bg-white/20 transition-all">
                    {c.hero.btn_facilities}
                </a>
            </div>
        </div>
    </div>
  </section>

  <!-- Value Proposition Grid -->
  <section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-12">
            <div class="reveal">
                <div class="w-16 h-16 bg-kaap-pink/10 rounded-2xl flex items-center justify-center mb-6 text-kaap-pink">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.384-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path></svg>
                </div>
                <h3 class="text-2xl font-bold text-gray-900 mb-4">{c.value[0].title}</h3>
                <p class="text-gray-600 leading-relaxed">
                    {c.value[0].desc}
                </p>
            </div>
            
            <div class="reveal delay-100">
                <div class="w-16 h-16 bg-kaap-purple/10 rounded-2xl flex items-center justify-center mb-6 text-kaap-purple">
                     <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path></svg>
                </div>
                <h3 class="text-2xl font-bold text-gray-900 mb-4">{c.value[1].title}</h3>
                <p class="text-gray-600 leading-relaxed">
                    {c.value[1].desc}
                </p>
            </div>

            <div class="reveal delay-200">
                <div class="w-16 h-16 bg-kaap-energy/10 rounded-2xl flex items-center justify-center mb-6 text-kaap-energy">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg>
                </div>
                <h3 class="text-2xl font-bold text-gray-900 mb-4">{c.value[2].title}</h3>
                <p class="text-gray-600 leading-relaxed">
                    {c.value[2].desc}
                </p>
            </div>
        </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gray-50">
      <div class="max-w-4xl mx-auto px-4 text-center reveal">
          <h2 class="text-3xl md:text-5xl font-bold font-heading text-gray-900 mb-6">{c.cta.title}</h2>
          <p class="text-lg text-gray-600 mb-10 leading-relaxed">
              {c.cta.desc}
          </p>
          <a href={`/${lang}/contact`} class="inline-block px-10 py-4 bg-kaap-gradient text-white font-bold rounded-full shadow-lg hover:shadow-xl hover:scale-105 transition-all">
              {c.cta.btn}
          </a>
      </div>
  </section>
</Layout>
