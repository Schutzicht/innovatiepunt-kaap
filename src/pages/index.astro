                                <div class="p-6 rounded-2xl border-2 border-gray-100 bg-gray-100 text-center transition-all 
                                    peer-checked:border-kaap-water peer-checked:bg-kaap-water/10
                                    peer-checked:[&_img]:opacity-100 peer-checked:[&_span]:text-kaap-water
                                    group-hover:bg-white group-hover:shadow-xl flex flex-col items-center">
                                    <Image src={iconWater} alt="Water" class="w-12 h-12 mb-3 opacity-20 transition-all duration-300" />
                                    <span class="block font-bold text-gray-900 transition-colors">Water</span>
                                </div>
                            </label>
                            <!-- Voedsel -->
                            <label class="relative group cursor-pointer">
                                <input type="checkbox" name="interest" value="voedsel" class="peer hidden" />
                                <div class="p-6 rounded-2xl border-2 border-gray-100 bg-gray-100 text-center transition-all 
                                    peer-checked:border-kaap-food peer-checked:bg-kaap-food/10
                                    peer-checked:[&_img]:opacity-100 peer-checked:[&_span]:text-kaap-food
                                    group-hover:bg-white group-hover:shadow-xl flex flex-col items-center">
                                    <Image src={iconFood} alt="Voedsel" class="w-12 h-12 mb-3 opacity-20 transition-all duration-300" />
                                    <span class="block font-bold text-gray-900 transition-colors">Voedsel</span>
