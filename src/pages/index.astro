    <!-- YouTube API Script -->
    <script>
        // Load YouTube IFrame API
        const tag = document.createElement('script');
        tag.src = "https://www.youtube.com/iframe_api";
        const firstScriptTag = document.getElementsByTagName('script')[0];
        if (firstScriptTag && firstScriptTag.parentNode) {
            firstScriptTag.parentNode.insertBefore(tag, firstScriptTag);
        }

        // Define types for TypeScript - effectively using 'any' to bypass strict checks in this inline script context
        // @ts-ignore
        let player;
        const videoId = 'hpAti93HYTI'; 
        const LOOP_CUTOFF = 5; // Cut last 5 seconds

        // @ts-ignore
        window.onYouTubeIframeAPIReady = function() {
            // @ts-ignore
            player = new YT.Player('youtube-player', {
                videoId: videoId,
                playerVars: {
                    'autoplay': 1,
                    'controls': 0,
                    'rel': 0,
                    'showinfo': 0,
                    'modestbranding': 1,
                    'mute': 1,
                    'loop': 1,
                    'playlist': videoId,
                    'playsinline': 1,
                    'disablekb': 1,
                    'fs': 0
                },
                events: {
                    'onReady': onPlayerReady,
                    'onStateChange': onPlayerStateChange
                }
            });
        };

        // @ts-ignore
        function onPlayerReady(event) {
            event.target.mute();
            event.target.playVideo();
            
            // Show video container once ready
            const videoContainer = document.getElementById('hero-video-container');
            const staticBg = document.getElementById('hero-static-bg');
            
            if(videoContainer) {
                videoContainer.classList.remove('hidden');
                // Optional: Fade out static image slightly more or keep it as blend layer
                // staticBg.style.opacity = '0'; // If we want to fully remove it
            }

            // Start custom loop monitoring
            monitorVideoLoop();
        }

        // @ts-ignore
        function onPlayerStateChange(event) {
            // Re-ensure mute on play to comply with autoplay policies
            // @ts-ignore
            if (event.data === YT.PlayerState.PLAYING) {
               // event.target.mute(); 
            }
        }

        function monitorVideoLoop() {
            setInterval(() => {
                // @ts-ignore
                if (player && player.getCurrentTime && player.getDuration) {
                    // @ts-ignore
                    const currentTime = player.getCurrentTime();
                    // @ts-ignore
                    const duration = player.getDuration();
                    
                    // If we are within the last 5 seconds, restart
                    if (duration > 0 && (duration - currentTime) <= LOOP_CUTOFF) {
                        // @ts-ignore
                        player.seekTo(0);
                    }
                }
            }, 1000);
        }
    </script>

