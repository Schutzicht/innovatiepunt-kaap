---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';

import iconWater from '../assets/icons/Kaap_RGB_Water_Blok.svg';
import iconFood from '../assets/icons/Kaap_RGB_Food_Blok.svg';
import iconEnergy from '../assets/icons/Kaap_RGB_Energie_Blok.svg';


import heroImage from '../assets/images/hero.jpg';
import { projects } from '../data/projects';
import ProjectCard from '../components/cards/ProjectCard.astro';
import ThemesInteractive from '../components/home/ThemesInteractive.astro';

// Brand Logos for Carousel
import logoRondFC from '../assets/branding/Kaap_RGB_Logo_rond_fc.svg';
import logoVertFC from '../assets/branding/Kaap_RGB_Logo_vert_fc.svg';
import logoWoordmerkFC from '../assets/branding/Kaap_RGB_Woordmerk_fc.svg';
import logoBeeldmerk from '../assets/branding/Kaap_RGB_Beeldmerk.svg';

// Authentic Photos
import heroBg from '../assets/photos/hero-kaap.jpg';
import videoPoster from '../assets/photos/video-poster.jpg';
import facilityTest from '../assets/photos/facility-test.jpg';

// Partner Logos
import logoRabobank from '../assets/images/partners/rabobank.png';
import logoHZ from '../assets/images/partners/hz-university.avif';
import logoFoodDelta from '../assets/images/partners/food-delta.svg';
import logoTerra from '../assets/images/partners/terra.png';
import logoVlissingen from '../assets/images/partners/vlissingen.png';
import facilityHousing from '../assets/photos/facility-housing.jpg';
import facilityAssets from '../assets/photos/facility-assets.jpg';
import facilityCommunity from '../assets/photos/facility-community.jpg';


---

<Layout title="Innovatiepunt KAAP | Water, Voedsel & Energie">
  <!-- Hero Section -->
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden bg-gray-900">
    <!-- background Image -->
    <div class="absolute inset-0 z-0">
        <Image 
            src={heroImage} 
            alt="Innovatiepunt KAAP Gebouw" 
            class="absolute inset-0 w-full h-full object-cover"
            quality="high"
        />
        <!-- Gradients & Overlays for Text Visibility -->
        <div class="absolute inset-0 bg-gray-900/40 z-10"></div>
        <div class="absolute inset-0 bg-gradient-to-t from-kaap-gray via-transparent to-kaap-gray/60 z-10"></div>
        <div class="absolute inset-0 bg-kaap-gradient opacity-10 mix-blend-overlay z-10"></div>
    </div>

    <!-- Active Elements -->
    <div class="relative z-20 max-w-7xl mx-auto px-4 text-center">
      <h1 class="text-6xl md:text-8xl font-bold font-heading text-white mb-6 leading-tight tracking-tight drop-shadow-2xl">
        Innovatiepunt <span class="text-transparent bg-clip-text bg-gradient-to-r from-kaap-pink to-kaap-purple relative inline-block">
            KAAP
        </span>
      </h1>
      <h2 class="text-3xl md:text-5xl font-bold font-heading text-white mb-8 drop-shadow-lg opacity-90">
        Bring your innovation to life
      </h2>
      <p class="text-lg md:text-xl text-gray-200 mb-12 max-w-3xl mx-auto leading-relaxed drop-shadow-md">
        De fysieke haven in Zeeland om innovaties in Energy, Food en Water te testen, ontwikkelen en demonstreren.
      </p>
      
      <div class="flex flex-col sm:flex-row justify-center gap-6">
        <a href="#ontdek" class="group relative px-8 py-4 bg-kaap-gradient rounded-full text-white font-bold text-lg overflow-hidden shadow-xl transition-all hover:scale-105">
          <span class="relative z-10">Ontdek KAAP</span>
          <div class="absolute inset-0 bg-white/20 translate-y-full group-hover:translate-y-0 transition-transform duration-300"></div>
        </a>
        <a href="/faciliteiten" class="group px-8 py-4 rounded-full bg-white/5 backdrop-blur-md border border-white/20 text-white font-bold text-lg hover:bg-white/10 hover:border-white/40 transition-all">
          Kaap je M²
        </a>
      </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-10 left-1/2 transform -translate-x-1/2 z-20 animate-bounce">
        <svg class="w-6 h-6 text-white/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
        </svg>
    </div>
  </section>

  <!-- Themes Section -->
  <ThemesInteractive />

  <!-- Intro Section -->
  <section id="ontdek" class="py-24 bg-gray-50 relative z-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-16 items-center">
        <div class="reveal">
          <h2 class="text-4xl md:text-5xl font-bold font-heading mb-8 text-gray-900 leading-tight kastlijntje">
            Hét innovatiepunt <br/><span class="text-kaap-purple">van Zeeland</span>
          </h2>
          <div class="space-y-6 text-xl text-gray-600 leading-relaxed">
            <p>
              Op de Kenniswerf in Vlissingen biedt KAAP <span class="font-bold text-gray-900 text-2xl">4.000 m²</span> binnen- en buitenruimte aan ondernemers, onderwijs en overheid.
            </p>
            <p>
              Hier worden theorie en praktijk samengebracht om concrete oplossingen te ontwikkelen voor de transities in Energie, Voedsel en Water.
            </p>
            <div class="pt-6">
              <a href="/over" class="inline-flex items-center font-bold text-kaap-purple hover:text-kaap-pink transition-colors group">
                Lees meer over KAAP 
                <span class="ml-2 transform group-hover:translate-x-2 transition-transform">→</span>
              </a>
            </div>
          </div>
        </div>
        <div class="relative reveal delay-200">
           <div class="aspect-square rounded-3xl overflow-hidden shadow-2xl rotate-3 transform hover:rotate-0 transition-transform duration-700">
              <Image src={facilityTest} alt="De lokatie van KAAP" class="w-full h-full object-cover scale-110" />
           </div>
           <div class="absolute -bottom-8 -left-8 w-48 h-48 bg-kaap-gradient rounded-full blur-3xl opacity-20 -z-10 animate-pulse"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- Facilities / What can you do Section -->
  <section class="py-24 bg-white relative z-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16 reveal">
        <h2 class="text-4xl md:text-5xl font-bold font-heading mb-4 text-gray-900">Wat kun je doen bij KAAP?</h2>
        <p class="text-gray-600 max-w-2xl mx-auto text-xl">Van de eerste schets tot het demonstreren van een prototype: KAAP faciliteert elke stap.</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {[
          { 
            nr: "01",
            title: "Pilot & Test", 
            desc: "Maak gebruik van 4.000 m² binnen- en buitenruimte om jouw innovatie in de praktijk te valideren.",
            tag: "Testveld",
            img: facilityTest
          },
          { 
            nr: "02",
            title: "Huisvesting", 
            desc: "Van inspirerende flexplekken tot vaste kantoorruimte. Word onderdeel van hét innovatieve ecosysteem.",
            tag: "Werkplekken",
            img: facilityHousing
          },
          { 
            nr: "03",
            title: "Faciliteiten", 
            desc: "Directe toegang tot de proefkeuken, werkplaatsen en technische expertise voor doorontwikkeling.",
            tag: "R&D Support",
            img: facilityAssets
          },
          { 
            nr: "04",
            title: "Community", 
            desc: "Vind de juiste partners, investeerders en talent via ons uitgebreide netwerk van partners.",
            tag: "Netwerk",
            img: facilityCommunity
          }
        ].map((item, i) => (
          <div class={`group p-8 rounded-[2rem] bg-gray-50 border border-gray-100 hover:bg-white hover:shadow-2xl transition-all duration-500 reveal delay-${i * 100} relative overflow-hidden`}>
            <!-- Hover Image -->
            <div class="absolute inset-0 opacity-0 group-hover:opacity-10 transition-opacity duration-700 pointer-events-none">
              <Image src={item.img} alt={item.title} class="w-full h-full object-cover scale-150 group-hover:scale-100 transition-transform duration-1000" />
            </div>
            
            <!-- Decorative Number -->
            <div class="absolute -top-4 -right-2 text-8xl font-bold font-heading text-gray-200/50 group-hover:text-kaap-purple/5 transition-colors pointer-events-none select-none">
              {item.nr}
            </div>
            
            <div class="relative z-10">
              <span class="inline-block px-3 py-1 rounded-full text-[10px] font-bold uppercase tracking-widest bg-kaap-gray text-white mb-6">
                {item.tag}
              </span>
              <h3 class="text-2xl font-bold mb-4 text-gray-900 group-hover:text-kaap-purple transition-colors">{item.title}</h3>
              <p class="text-gray-600 leading-relaxed">{item.desc}</p>
              
              <div class="mt-8 w-12 h-1 bg-gray-200 group-hover:w-full group-hover:bg-kaap-gradient transition-all duration-500"></div>
            </div>
          </div>
        ))}
      </div>

      <div class="mt-16 text-center reveal delay-400">
        <a href="/faciliteiten" class="inline-flex items-center px-8 py-4 bg-kaap-gray text-white font-bold rounded-full hover:bg-kaap-gradient transition-all shadow-lg hover:scale-105">
          Alle faciliteiten bekijken
        </a>
      </div>
    </div>
  </section>

  <section class="py-24 bg-kaap-gray relative overflow-hidden">
     <div class="absolute inset-0 bg-kaap-gradient opacity-10 blur-3xl"></div>
     
     <!-- Tech Decor -->
     <div class="absolute top-1/4 -left-20 w-64 h-64 bg-kaap-pink/20 rounded-full blur-[100px] animate-pulse"></div>
     <div class="absolute bottom-1/4 -right-20 w-64 h-64 bg-kaap-purple/20 rounded-full blur-[100px] animate-pulse delay-700"></div>

     <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <h2 class="text-3xl md:text-5xl font-bold font-heading text-white mb-12 reveal kastlijntje text-center md:text-left">KAAP in Beeld</h2>
        
        <div id="video-container" class="relative w-full aspect-video rounded-3xl overflow-hidden shadow-[0_0_50px_rgba(141,115,218,0.3)] border border-white/10 reveal delay-100 group cursor-pointer bg-black">
             <!-- Poster Image Overlay -->
             <div id="video-poster" class="absolute inset-0 z-20 transition-all duration-700 group-hover:scale-105">
                <Image src={videoPoster} alt="KAAP Corporate Movie Thumbnail" class="w-full h-full object-cover opacity-60" />
                <div class="absolute inset-0 bg-gradient-to-t from-kaap-gray via-transparent to-transparent opacity-80"></div>
                
                <!-- Play Button -->
                <div class="absolute inset-0 flex items-center justify-center">
                    <div class="relative">
                        <!-- Pulsing Rings -->
                        <div class="absolute inset-0 rounded-full bg-white/20 animate-ping -z-10 scale-150"></div>
                        <div class="absolute inset-0 rounded-full bg-kaap-gradient animate-pulse -z-10 scale-125"></div>
                        
                        <!-- Main Button -->
                        <div class="w-20 h-20 md:w-28 md:h-28 bg-white rounded-full flex items-center justify-center shadow-2xl transform transition-all duration-500 group-hover:scale-110 group-active:scale-95">
                            <svg class="w-8 h-8 md:w-12 md:h-12 text-kaap-gray ml-2" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M8 5v14l11-7z"></path>
                            </svg>
                        </div>
                    </div>
                </div>

                <!-- Labels -->
                <div class="absolute bottom-8 left-8 md:bottom-12 md:left-12">
                    <span class="text-kaap-pink font-bold uppercase tracking-widest text-sm mb-2 block">Premium Experience</span>
                    <h3 class="text-2xl md:text-4xl font-bold text-white uppercase italic tracking-tighter">Bring your innovation to life</h3>
                </div>
             </div>

             <!-- The actual Iframe (hidden until click) -->
             <div id="video-iframe-wrapper" class="absolute inset-0 z-10 hidden">
                 <iframe 
                    id="youtube-iframe"
                    class="w-full h-full" 
                    src="" 
                    title="KAAP Corporate Movie" 
                    frameborder="0" 
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" 
                    allowfullscreen>
                </iframe>
             </div>
        </div>
     </div>
  </section>

  <script>
      const container = document.getElementById('video-container');
      const poster = document.getElementById('video-poster');
      const wrapper = document.getElementById('video-iframe-wrapper');
      const iframe = document.getElementById('youtube-iframe') as HTMLIFrameElement;

      if (container && poster && wrapper && iframe) {
          container.addEventListener('click', () => {
              // Set the SRC and show the video
              iframe.src = "https://www.youtube.com/embed/5t_JCDYSHHI?autoplay=1&rel=0&modestbranding=1";
              poster.classList.add('opacity-0', 'pointer-events-none');
              wrapper.classList.remove('hidden');
              setTimeout(() => {
                  poster.style.display = 'none';
              }, 700);
          });
      }
  </script>

  <!-- audience / For Whom Section -->
  <section class="py-24 bg-white relative z-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="mb-16 reveal">
        <h2 class="text-4xl md:text-5xl font-bold font-heading mb-4 text-gray-900 kastlijntje">Voor wie is KAAP?</h2>
        <p class="text-gray-600 text-xl">Een ecosysteem waar iedereen een rol speelt.</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
        <div class="reveal">
          <h3 class="text-2xl font-bold mb-4 text-kaap-pink">Ondernemers & startups</h3>
          <p class="text-gray-600 leading-relaxed text-lg">Test je innovatie in een real-world omgeving en versnel je time-to-market door gebruik te maken van onze kennis en netwerk.</p>
        </div>
        <div class="reveal delay-100">
          <h3 class="text-2xl font-bold mb-4 text-kaap-purple">Onderwijs & studenten</h3>
          <p class="text-gray-600 leading-relaxed text-lg">Werk aan echte transitievraagstukken en doe werkervaring op in de meest innovatieve hub van de regio.</p>
        </div>
        <div class="reveal delay-200">
          <h3 class="text-2xl font-bold mb-4 text-kaap-water">Overheid & publiek</h3>
          <p class="text-gray-600 leading-relaxed text-lg">Zie hoe regionaal beleid op het gebied van water, voedsel en energie in de praktijk tot leven komt.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Projects Carousel -->
  <section class="py-24 bg-gray-50 overflow-hidden">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col md:flex-row justify-between items-end mb-12 reveal">
            <div>
                 <h2 class="text-3xl md:text-5xl font-bold font-heading mb-4 text-gray-900 kastlijntje">Uitgelichte Projecten</h2>
                <p class="text-gray-600">Innovatie in de praktijk</p>
            </div>
            
            <!-- Carousel Controls -->
            <div class="hidden md:flex gap-4">
                 <button id="scroll-left" class="p-3 rounded-full bg-kaap-gray text-white border-2 border-kaap-gray hover:bg-kaap-gradient hover:border-transparent transition-all shadow-md z-10">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path></svg>
                 </button>
                 <button id="scroll-right" class="p-3 rounded-full bg-kaap-gray text-white border-2 border-kaap-gray hover:bg-kaap-gradient hover:border-transparent transition-all shadow-md z-10">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
                 </button>
            </div>
        </div>
      
        <!-- Carousel Container -->
        <div class="relative w-full group">
            <div id="project-carousel" class="flex overflow-x-auto snap-x snap-mandatory gap-6 pb-8 -mx-4 px-4 md:mx-0 md:px-0 scrollbar-hide mask-fade-right cursor-grab active:cursor-grabbing">
                {projects.slice(0, 5).map((project, index) => (
                    <ProjectCard 
                        project={project} 
                        index={index} 
                        class="snap-center shrink-0 w-[85vw] md:w-[500px] h-[60vh] md:h-[500px]" 
                    />
                ))}
            </div>
        </div>
        


  <script>
    const slider = document.getElementById('project-carousel');
    const prevBtn = document.getElementById('scroll-left');
    const nextBtn = document.getElementById('scroll-right');

    if (slider && prevBtn && nextBtn) {
        // Button Scroll
        prevBtn.addEventListener('click', () => {
            slider.scrollBy({ left: -slider.offsetWidth * 0.5, behavior: 'smooth' });
        });
        
        nextBtn.addEventListener('click', () => {
            slider.scrollBy({ left: slider.offsetWidth * 0.5, behavior: 'smooth' });
        });

        // Drag Scroll
        let isDown = false;
        let startX;
        let scrollLeft;
        let hasMoved = false;

        slider.addEventListener('mousedown', (e) => {
            isDown = true;
            hasMoved = false;
            slider.classList.add('active');
            slider.style.cursor = 'grabbing';
            // Disable snap and smooth scroll during drag
            slider.style.scrollSnapType = 'none';
            slider.style.scrollBehavior = 'auto';
            startX = e.pageX - slider.offsetLeft;
            scrollLeft = slider.scrollLeft;
        });

        const stopDragging = () => {
            if(!isDown) return;
            isDown = false;
            slider.classList.remove('active');
            slider.style.cursor = 'grab';
            // Re-enable snap and smooth scroll
            slider.style.scrollSnapType = 'x mandatory';
            slider.style.scrollBehavior = 'smooth';
        };

        slider.addEventListener('mouseleave', stopDragging);
        slider.addEventListener('mouseup', stopDragging);

        slider.addEventListener('mousemove', (e) => {
            if (!isDown) return;
            e.preventDefault();
            const x = e.pageX - slider.offsetLeft;
            const walk = (x - startX) * 2; 
            if (Math.abs(walk) > 5) hasMoved = true;
            slider.scrollLeft = scrollLeft - walk;
        });

        // Prevent link activation if we dragged
        slider.addEventListener('click', (e) => {
            if (hasMoved) {
                e.preventDefault();
                e.stopPropagation();
            }
        }, true);
    }
  </script>

  <style>
    /* Hide scrollbar for Chrome, Safari and Opera */
    .scrollbar-hide::-webkit-scrollbar {
        display: none;
    }
    /* Hide scrollbar for IE, Edge and Firefox */
    .scrollbar-hide {
        -ms-overflow-style: none;  /* IE and Edge */
        scrollbar-width: none;  /* Firefox */
    }

    /* Infinite Marquee Animation */
    .animate-marquee {
        display: flex;
        width: max-content;
        animation: marquee 40s linear infinite;
    }

    @keyframes marquee {
        0% { transform: translateX(0); }
        100% { transform: translateX(-50%); }
    }

    .group:hover .animate-marquee {
        animation-play-state: paused;
    }
  </style>

  <!-- Partners Section (Infinite Marquee) -->
  <section class="py-24 bg-gray-50 relative z-20 border-t border-gray-100 overflow-hidden">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mb-12">
        <div class="text-center reveal">
            <h3 class="text-sm font-bold uppercase tracking-widest text-gray-400 mb-4">Onze Partners in Innovatie</h3>
        </div>
    </div>
    
    <div class="relative w-full overflow-hidden group">
        <div class="animate-marquee flex items-center">
            {/* First Set */}
            <div class="flex items-center gap-12 md:gap-24 px-6 md:px-12">
                 <Image src={logoRabobank} alt="Rabobank" class="h-10 md:h-12 w-auto hover:scale-105 transition-all duration-300" />
                 <Image src={logoHZ} alt="HZ University" class="h-10 md:h-12 w-auto hover:scale-105 transition-all duration-300" />
                 <Image src={logoFoodDelta} alt="Food Delta Zeeland" class="h-10 md:h-12 w-auto hover:scale-105 transition-all duration-300" />
                 <Image src={logoTerra} alt="Terra Inspectioneering" class="h-10 md:h-12 w-auto hover:scale-105 transition-all duration-300" />
                 <Image src={logoVlissingen} alt="Gemeente Vlissingen" class="h-10 md:h-12 w-auto hover:scale-105 transition-all duration-300" />
            </div>

            {/* Second Set (Duplicate for Loop) */}
            <div class="flex items-center gap-12 md:gap-24 px-6 md:px-12">
                 <Image src={logoRabobank} alt="Rabobank" class="h-10 md:h-12 w-auto hover:scale-105 transition-all duration-300" />
                 <Image src={logoHZ} alt="HZ University" class="h-10 md:h-12 w-auto hover:scale-105 transition-all duration-300" />
                 <Image src={logoFoodDelta} alt="Food Delta Zeeland" class="h-10 md:h-12 w-auto hover:scale-105 transition-all duration-300" />
                 <Image src={logoTerra} alt="Terra Inspectioneering" class="h-10 md:h-12 w-auto hover:scale-105 transition-all duration-300" />
                 <Image src={logoVlissingen} alt="Gemeente Vlissingen" class="h-10 md:h-12 w-auto hover:scale-105 transition-all duration-300" />
            </div>
             {/* Third Set (Extra Buffer for large screens) */}
            <div class="flex items-center gap-12 md:gap-24 px-6 md:px-12">
                 <Image src={logoRabobank} alt="Rabobank" class="h-10 md:h-12 w-auto hover:scale-105 transition-all duration-300" />
                 <Image src={logoHZ} alt="HZ University" class="h-10 md:h-12 w-auto hover:scale-105 transition-all duration-300" />
                 <Image src={logoFoodDelta} alt="Food Delta Zeeland" class="h-10 md:h-12 w-auto hover:scale-105 transition-all duration-300" />
                 <Image src={logoTerra} alt="Terra Inspectioneering" class="h-10 md:h-12 w-auto hover:scale-105 transition-all duration-300" />
                 <Image src={logoVlissingen} alt="Gemeente Vlissingen" class="h-10 md:h-12 w-auto hover:scale-105 transition-all duration-300" />
            </div>
            {/* Fourth Set (Extra Buffer) */}
            <div class="flex items-center gap-12 md:gap-24 px-6 md:px-12">
                 <Image src={logoRabobank} alt="Rabobank" class="h-10 md:h-12 w-auto hover:scale-105 transition-all duration-300" />
                 <Image src={logoHZ} alt="HZ University" class="h-10 md:h-12 w-auto hover:scale-105 transition-all duration-300" />
                 <Image src={logoFoodDelta} alt="Food Delta Zeeland" class="h-10 md:h-12 w-auto hover:scale-105 transition-all duration-300" />
                 <Image src={logoTerra} alt="Terra Inspectioneering" class="h-10 md:h-12 w-auto hover:scale-105 transition-all duration-300" />
                 <Image src={logoVlissingen} alt="Gemeente Vlissingen" class="h-10 md:h-12 w-auto hover:scale-105 transition-all duration-300" />
            </div>
        </div>
    </div>
  </section>

  <!-- Community & Newsletter Section -->
  <section class="py-24 bg-white relative z-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="mb-12 reveal text-center md:text-left">
            <h2 class="text-3xl md:text-5xl font-bold font-heading mb-4 text-gray-900 kastlijntje">Blijf op de hoogte</h2>
            <p class="text-gray-600 max-w-2xl">Word onderdeel van de KAAP community en ontvang updates over de transities die jij interessant vindt.</p>
        </div>

        <div class="bg-gray-50 rounded-3xl shadow-lg border border-gray-100 overflow-hidden flex flex-col md:flex-row reveal delay-100">
            <!-- Info Block -->
            <div class="w-full md:w-5/12 bg-kaap-gray text-white p-10 md:p-16 relative overflow-hidden flex flex-col justify-center">
                <div class="absolute inset-0 bg-kaap-gradient opacity-10 blur-3xl"></div>
                
                <div class="relative z-10">
