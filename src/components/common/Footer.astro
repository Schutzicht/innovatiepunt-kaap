---
import { Image } from "astro:assets";
const currentYear = new Date().getFullYear();
import logoMark from "../../assets/branding/Kaap_RGB_Beeldmerk.svg";
import logoWhite from "../../assets/branding/Kaap_RGB_Logo_vert_wit.svg";

interface Props {
  lang: string;
}

const { lang } = Astro.props;

import { useTranslations } from "../../i18n/utils";
const t = useTranslations(lang as any);
---

<footer
    class="bg-kaap-gray text-white relative overflow-hidden pt-12 pb-8 mt-24"
    data-theme="dark"
>
    <!-- Massive Watermark -->
    <div
        class="absolute top-0 right-0 w-[800px] h-[800px] opacity-[0.03] transform translate-x-1/3 -translate-y-1/3 pointer-events-none"
    >
        <Image src={logoMark} alt="KAAP" class="w-full h-full object-contain" />
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <!-- Logo Section (Replaces Massive Interaction) -->
        <div class="border-b border-white/10 pb-20 mb-20">
            <div
                class="flex flex-col md:flex-row items-center justify-between gap-12"
            >
                <!-- Main Logo -->
                <div class="w-24 md:w-32">
                    <Image
                        src={logoWhite}
                        alt="Innovatiepunt KAAP"
                        class="w-full h-auto"
                    />
                </div>

                <!-- CTA Button -->
                <div
                    class="flex flex-col items-center md:items-end text-center md:text-right"
                >
                    <p class="text-xl text-gray-400 max-w-md">
                        {t('footer.cta')}
                    </p>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-12 gap-12 mb-16">
            <!-- Brand & Newsletter -->
            <div class="md:col-span-5">
                <div class="mb-8">
                    <span class="text-2xl font-bold font-heading text-white"
                        >Innovatiepunt KAAP</span
                    >
                    <p class="mt-4 text-gray-500 leading-relaxed">
                        {t('footer.subtitle')}
                    </p>
                </div>

                <form class="relative max-w-sm">
                    <input
                        type="email"
                        placeholder={t('footer.newsletter_placeholder')}
                        class="w-full bg-white/5 border border-white/10 rounded-tl-2xl rounded-br-2xl py-4 px-6 text-white placeholder-gray-500 focus:outline-none focus:border-kaap-purple transition-colors"
                    />
                    <button
                        type="submit"
                        class="absolute right-2 top-2 p-2 bg-kaap-gradient rounded-tl-xl rounded-br-xl text-white hover:scale-110 transition-transform"
                    >
                        <svg
                            class="w-5 h-5"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M14 5l7 7m0 0l-7 7m7-7H3"></path></svg
                        >
                    </button>
                </form>
            </div>

            <!-- Spacer -->
            <div class="md:col-span-1"></div>

            <!-- Links Grid -->
            <div class="md:col-span-6 grid grid-cols-2 md:grid-cols-3 gap-8">
                <div>
                    <h4 class="text-white font-bold mb-6 font-heading">
                        {t('footer.transitions')}
                    </h4>
                    <ul class="space-y-4 text-sm text-gray-400">
                        <li>
                            <a
                                href={`/${lang}/projecten?theme=water`}
                                class="hover:text-kaap-water transition-colors"
                                >{t('theme.water')}</a
                            >
                        </li>
                        <li>
                            <a
                                href={`/${lang}/projecten?theme=voedsel`}
                                class="hover:text-kaap-food transition-colors"
                                >{t('theme.food')}</a
                            >
                        </li>
                        <li>
                            <a
                                href={`/${lang}/projecten?theme=energie`}
                                class="hover:text-kaap-energy transition-colors"
                                >{t('theme.energy')}</a
                            >
                        </li>
                    </ul>
                </div>
                <div>
                    <h4 class="text-white font-bold mb-6 font-heading">
                        {t('footer.sitemap')}
                    </h4>
                    <ul class="space-y-4 text-sm text-gray-400">
                        <li>
                            <a
                                href={`/${lang}/projecten`}
                                class="hover:text-white transition-colors"
                                >{t('nav.projects')}</a
                            >
                        </li>
                        <li>
                            <a
                                href={`/${lang}/faciliteiten`}
                                class="hover:text-white transition-colors"
                                >{t('nav.facilities')}</a
                            >
                        </li>
                        <li>
                            <a
                                href={`/${lang}/agenda`}
                                class="hover:text-white transition-colors"
                                >{t('nav.events')}</a
                            >
                        </li>
                        <li>
                            <a
                                href={`/${lang}/nieuws`}
                                class="hover:text-white transition-colors"
                                >{t('nav.news')}</a
                            >
                        </li>
                    </ul>
                </div>
                <div>
                    <h4 class="text-white font-bold mb-6 font-heading">
                        {t('footer.contact')}
                    </h4>
                    <ul class="space-y-4 text-sm text-gray-400">
                        <li>
                            <a
                                href="mailto:info@innovatiepunt-kaap.nl"
                                class="hover:text-white transition-colors"
                                >info@innovatiepunt-kaap.nl</a
                            >
                        </li>
                        <li>
                            <a
                                href="tel:0652661475"
                                class="hover:text-white transition-colors"
                                >06-52661475</a
                            >
                        </li>
                        <li class="opacity-60">
                            Edisonweg 10<br />4382 NW Vlissingen
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div
            class="border-t border-white/10 pt-8 flex flex-col md:flex-row justify-between items-center text-xs text-gray-600"
        >
            <p>&copy; {currentYear} Innovatiepunt KAAP.</p>
            <div class="flex space-x-6 mt-4 md:mt-0">
                <a href="#" class="hover:text-white transition-colors"
                    >{t('footer.privacy')}</a
                >
                <a href="#" class="hover:text-white transition-colors"
                    >Cookie Policy</a
                >
            </div>
        </div>
    </div>
</footer>

<style>
    .text-outline {
        -webkit-text-stroke: 1px rgba(255, 255, 255, 0.2);
        color: transparent;
    }
</style>
