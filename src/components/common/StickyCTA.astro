---
import { Image } from 'astro:assets';
import beeldmerk from '../../assets/graphics/Beeldmerk_RGB_FC.png';
---
<a href="/contact" class="fixed bottom-8 right-8 z-40 group flex items-center justify-center w-20 h-20 transition-transform duration-300 hover:scale-110">
  <!-- Beeldmerk Graphic Container - Spins 360deg on hover -->
  <div class="absolute inset-0 w-full h-full transition-transform duration-700 ease-in-out group-hover:rotate-[360deg]">
      <Image src={beeldmerk} alt="Contact" class="w-full h-full object-contain drop-shadow-xl" />
  </div>

  <!-- Icon Container -->
  <div class="relative z-10 w-8 h-8 flex items-center justify-center">
    <!-- Icon (Message/Chat) - Fades out & scales down on hover -->
    <svg class="absolute inset-0 w-full h-full text-white drop-shadow-md transition-all duration-300 ease-in-out transform group-hover:opacity-0 group-hover:scale-50" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
    </svg>

    <!-- Icon (Arrow Right) - Fades in & scales up on hover -->
    <svg class="absolute inset-0 w-full h-full text-white drop-shadow-md opacity-0 scale-50 transition-all duration-300 ease-in-out transform group-hover:opacity-100 group-hover:scale-100" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
    </svg>
  </div>
  
  <!-- Optional: Tooltip on left -->
  <span class="absolute right-full mr-4 opacity-0 group-hover:opacity-100 transition-opacity duration-300 bg-black/80 text-white text-sm font-bold px-3 py-1 rounded whitespace-nowrap pointer-events-none">
    Neem contact op
  </span>
</a>
